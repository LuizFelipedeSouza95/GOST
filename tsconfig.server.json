{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "sourceMap": false,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"]
}

