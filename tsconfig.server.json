// tsconfig.server.json
{
  "compilerOptions": {
    
    "target": "ES2020", 
    
    "esModuleInterop": true, 
    
    "module": "CommonJS", 
    "moduleResolution": "node",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "outDir": "./dist/server",
    "baseUrl": ".",
    "rootDir": ".",
    
    "paths": {
      "server/*": ["./server/*"] 
    },
    
    "strict": true,
    "skipLibCheck": true
  },
  
  "include": ["api/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}