{
    "framework": "vite",
    "buildCommand": "yarn build",
    "outputDirectory": "dist",
    "rewrites": [
        { "source": "/((?!api).*)", "destination": "/index.html" }
    ],
    "functions": {
        "api/**/*.{js,ts}": {
            "runtime": "nodejs22.x",
            "includeFiles": "server/**"
        }
    }
}